{
  "name": "clapy",
  "version": "1.0.0",
  "description": "Figma plugin to start building Clapy applications.",
  "private": true,
  "license": "UNLICENSED",
  "sideEffects": [
    "*.css",
    "*.scss",
    "*.jpg",
    "*.svg",
    "*.png",
    "*.gif",
    "*.webp",
    "*.zip"
  ],
  "scripts": {
    "start": "yarn webpackdev",
    "dev": "npm-run-all --parallel dev-with-browser:plugin dev-with-browser:browser dev-with-browser:server",
    "_build:staging": "yarn build-step1 && yarn webpackbuild:staging && yarn build-step2",
    "build:prod": "yarn build-step1 && yarn webpackbuild:prod && yarn build-step2",
    "up": "cd .. && yarn up",
    "upgr": "yarn upgrade-interactive --latest",
    "_________________ implementation details _________________": "",
    "dev-with-browser:plugin": "yarn webpackdev --env PREVIEW_ENV=figma",
    "dev-with-browser:browser": "webpack-dev-server --mode=development --env PREVIEW_ENV=browser --env APP_ENV=dev",
    "dev-with-browser:server": "nodemon --inspect=0.0.0.0:9230 --watch src/core/dev-preview-mode/preview-server.js src/core/dev-preview-mode/preview-server.js",
    "clean": "sudo kill -9 `sudo lsof -t -i:9001` && sudo kill -9 `sudo lsof -t -i:9000`",
    "lint": "eslint src --ext .js,.jsx,ts,tsx --fix",
    "gentypes": "cd .. && yarn gentypes",
    "webpackdev": "webpack --mode=development --env APP_ENV=dev --watch",
    "webpackbuild:staging": "webpack --mode=production --env APP_ENV=staging",
    "webpackbuild:prod": "webpack --mode=production --env APP_ENV=production",
    "build-step1": "ncp manifest.json dist/manifest.json",
    "build-step2": "rimraf dist && mkdirp dist/build && ncp build/index.html dist/build/index.html && ncp build/backend.js dist/build/backend.js && cd dist && bestzip plugin.zip *",
    "analyzebundle": "yarn webpackbuild:staging --profile --json > stats.json",
    "killbyport": "sudo kill -9 `sudo lsof -t -i:9001`"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.1",
    "buffer": "^6.0.3",
    "jwt-decode": "^3.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.7",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.43.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/sha.js": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "bestzip": "^2.2.0",
    "css-loader": "^6.7.1",
    "csstype": "^3.0.11",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "html-webpack-plugin": "^5.5.0",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "react-dev-utils": "^12.0.0",
    "react-refresh": "0.11.0",
    "react-refresh-typescript": "^2.0.4",
    "rimraf": "^3.0.2",
    "sass": "^1.49.10",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.70.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "ws": "^8.5.0"
  }
}
